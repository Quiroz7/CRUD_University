@model IEnumerable<proyectUniversity.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Students</h1>
<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-3"><input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" /></div>
        <div class="col-md-2"><input type="submit" value="Search" class="btn btn-dark" /></div>
        <div class="col-md-7"><a asp-action="Create" class="btn btn-success" style="float: right;">Create new student</a></div>
    </div>
</form>
<br></br>

@*<p>
    <a asp-action="Create">Agregar estudiante</a>
</p>*@
<table class="table">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                    <a asp-action="Edit" class="col-sm-3 btn btn-info" asp-route-id="@item.ID">Edit</a>
                    <a asp-action="Details" class="col-sm-3 btn btn-secondary" asp-route-id="@item.ID">Details</a>
                    <a asp-action="Delete" class="col-sm-3 btn btn-danger" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
