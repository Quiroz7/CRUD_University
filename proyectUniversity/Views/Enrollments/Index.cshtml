@model IEnumerable<proyectUniversity.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Enrollment</h1>
<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-3"><input type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" /></div>
        <div class="col-md-2"><input type="submit" value="Search" class="btn btn-dark" /></div>
        <div class="col-md-7"><a asp-action="Create" class="btn btn-success" style="float: right;">Create new enrollment</a></div>
    </div>
</form>
<br></br>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstMidName)
            </td>
            <td>
                    <a asp-action="Edit" class="col-sm-3 btn btn-info" asp-route-id="@item.EnrollmentID">Edit</a>
                    <a asp-action="Details" class="col-sm-3 btn btn-secondary" asp-route-id="@item.EnrollmentID">Details</a>
                    <a asp-action="Delete" class="col-sm-3 btn btn-danger" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
