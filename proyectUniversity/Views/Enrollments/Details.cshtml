@model proyectUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <br></br>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd><br></br>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd><br></br>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
    </dl>
</div><br></br>
<div>
    <a asp-action="Edit" class="col-sm-3 btn btn-warning" asp-route-id="@Model?.EnrollmentID">Editar</a> |
    <a asp-action="Index" class="col-sm-3 btn btn-dark">Back</a>
</div>
